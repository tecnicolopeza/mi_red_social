            <li class="nav-item">
                <a class="nav-link text-white" aria-current="page" href="{{ path('login') }}">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('register') }}">Register</a>
            </li>
        </ul>
        {% endif %}

        {# Si esta logueado #}
        {% if app.user != null %}
        <hr>
        <form class="d-flex" action="search">
            <input class="form-control me-1" type="search" placeholder="Search people" aria-label="Search" name="search">
            <button class="btn btn-primary text-light" type="submit">Search</button>
        </form>
    </div>
    <div class="d-flex align-items-end">
        <div class="dropdown profile-div">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle profile-menu" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                {% if app.user.image == null %}
                <img src="{{ asset("img/default.jpg") }}" alt="" width="32" height="32" class="rounded-circle me-2">
                {% else %}
                <img src="{{ asset("img/"~app.user.image) }}" alt="" width="32" height="32" class="rounded-circle me-2">
                {% endif %}
                <strong>{{ app.user.name }}</strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                <li><a class="dropdown-item" href="{{ path('account')}}">Account</a></li>
                <li><a class="dropdown-item" href="{{ path('profile')}}">Profile</a></li>
                <li><a class="dropdown-item" href="{{ path('help')}}">Help</a></li>
                <li><a class="dropdown-item" href="{{ path('logout')}}">Logout</a></li>
            </ul>
        </div>
