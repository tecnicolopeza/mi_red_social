{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
<body>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4 text-center">{{title}}</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-dark btn-sm">
                All the people <span class="badge badge-light">{{ users.getTotalItemCount }}</span>
            </button>
        </div>
    </div>

    <div class="row">   
        {% for user in users %}
        <div class="col-md-12">
            <hr>
            {% if user.image == null %}
                    <img src="{{ asset("img/default.jpg") }}" alt="" class="rounded-circle mx-auto" style="width:5em; height:5em;">
            {% else %}
                    <img src="{{ asset("img/"~user.image) }}" alt="" class="rounded-circle mx-auto" style="width:5em; height:5em;">
            {% endif %}
            <span class="d-inline-block">
                <span class="mx-2">{{user.name}} {{user.surname}}</span>
                <span class="mx-2">{{user.nick}}</span>
                <br>
                <span class="mx-2">{{user.bio}}</span>
            </span>
            <hr>
            
        </div>
        {% endfor %}
    </div>
    <br>

    <div class="row">
        
            <div class="navigation">
                {{ knp_pagination_render(users) }}
            </div>
    </div>
</div>
</body>
{% endblock %}
